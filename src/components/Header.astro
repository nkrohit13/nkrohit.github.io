---
import siteConfig from '../data/site-config';
---

<header class="w-full max-w-3xl mx-auto mb-12 sm:mb-16">
    {
        siteConfig.logo && siteConfig.logo?.src ? (
            <a href="/">
                <img src={siteConfig.logo.src} alt={siteConfig.logo.alt || ''} class="max-h-12" />
            </a>
        ) : (
            <div>
                <a class="text-2xl leading-tight font-semibold text-theme-foreground sm:text-6xl block" href="/" style="line-height: 1.25 !important;">
                    {siteConfig.title}
                </a>
                <div class="flex justify-between items-center mt-2">
                    {siteConfig.subtitle && <p class="text-lg leading-tight">{siteConfig.subtitle}</p>}
                    <p class="text-lg leading-tight">India</p>
                </div>
            </div>
        )
    }
</header>
